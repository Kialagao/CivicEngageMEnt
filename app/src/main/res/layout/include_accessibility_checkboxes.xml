<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/event_accessibilities_question"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/inter_regular"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lay_accessibility_one"
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accessibility_one_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_gravity="center"
                android:text="@string/accessibility_one"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_10sdp"/>

            <CheckBox
                android:id="@+id/accessibility_one_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_gravity="center"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/recyclerview_divider_gray"/>

        <LinearLayout
            android:id="@+id/lay_accessibility_two"
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accessibility_two_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_gravity="center"
                android:text="@string/accessibility_two"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_10sdp"/>

            <CheckBox
                android:id="@+id/accessibility_two_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_gravity="center"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/recyclerview_divider_gray"/>

        <LinearLayout
            android:id="@+id/lay_accessibility_three"
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accessbility_three_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_gravity="center"
                android:text="@string/accessibility_three"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_10sdp"/>

            <CheckBox
                android:id="@+id/accessibility_three_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_gravity="center"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/recyclerview_divider_gray"/>

        <LinearLayout
            android:id="@+id/lay_accessibility_four"
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accessibility_four_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_gravity="center"
                android:text="@string/accessibility_four"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_10sdp"/>

            <CheckBox
                android:id="@+id/accessibility_four_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_gravity="center"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/recyclerview_divider_gray"/>

    </LinearLayout>

</LinearLayout>