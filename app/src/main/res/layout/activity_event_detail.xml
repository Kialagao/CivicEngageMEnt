<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_blue">
    <androidx.cardview.widget.CardView
        android:id="@+id/event_name_virtual"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="16dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="@string/dummy_event_name"
            android:gravity="center"
            android:textSize="30dp">
        </TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/dummy_virtualengage_screen1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="40dp"
        android:gravity="center"
        android:text="@string/virtualengage_text_dummy"
        app:cardBackgroundColor="@color/secondary_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/event_name_virtual">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Check In"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white">

        </TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/dummy_virtualengage_screen_2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="0dp"
        android:layout_height= "400dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dummy_virtualengage_screen1"
        app:cardCornerRadius="16dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Event location: \n2520 Sproul Hall Plaza  \nBerkeley, CA\n\n Rally to promote sustainability! \n More descriptions here"
            android:textColor="@color/black"
            android:textSize="25dp"></TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/accessibility_btn"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="40dp"
        android:gravity="center"
        android:text="@string/virtualengage_text_dummy"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:cardBackgroundColor="@color/secondary_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dummy_virtualengage_screen_2"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Accessibility Info"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white">

        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="40dp"
        android:gravity="center"
        android:text="@string/virtualengage_text_dummy"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:cardBackgroundColor="@color/secondary_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accessibility_btn">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Engage Virtually"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white">

        </TextView>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>